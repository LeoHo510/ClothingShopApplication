<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StartActivity2">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/startSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:iss_auto_cycle="true"
        app:iss_delay="2000"
        app:iss_no_dots="true"
        app:iss_period="2000"
        app:iss_text_align="CENTER"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merchize is a print on demand company that offers reliable and trustworthy solutions for online sellers"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="70dp"
        app:layout_constraintBottom_toTopOf="@id/line2"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="@drawable/background_item_button" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:background="@drawable/background_item_button2"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnViewShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View shop"
            android:background="@drawable/background_item_button"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>